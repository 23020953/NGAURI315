if (Gender == 1) {
if (Body == 1 && Height == 1) {
cout << "You're searching for a tall and masculine man!" << endl;}
else if (Body == 1 && Height == 2) {
cout << "You're seraching for a short and masculine man!" << endl;}
else if (Body == 2 && Height == 1) {
cout << "You're searching for a tall and masculine man!" << endl;}
 else if (Body == 2 && Height == 2) {
cout << "You're seraching for a short and masculine man!" << endl;}
else if (Body == 3 && Height == 1) {
cout << "You're searching for a tall and skinny man!" << endl;}
else if (Body == 3 && Height == 2) {
cout << "You're searching for a short and skinny man!" << endl;}
else {
cout << "No match found." << endl;}
}

else if (Gender == 2) {
if (Body == 1 && Height == 1) {
cout << "You're searching for a tall and thick girl" << endl;}
else if (Body == 1 && Height == 2) {
cout << "You're searching for a short and thick girl" << endl;}
 else if (Body == 2 && Height == 1) {
cout << "You're searching for a tall and fit girl" << endl;}
 else if (Body == 2 && Height == 2) {
cout << "You're searching for a short and fit girl" << endl;}
else if (Body == 3 && Height == 1) {
cout << "You're searching for a tall and petite girl" << endl;}
 else if (Body == 3 && Height == 2) {
cout << "You're searching for a short and petite girl" << endl;}
else {
cout << "No match found." << endl;}
    }
 else }
